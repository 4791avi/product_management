<div class="card text-center">
  <div class="card-header">
    <h2><%= controller.action_name.titleize %> Product </h2>
  </div>
  <div class="card-body">
    <%= form_with(model: product, local: true) do |form| %>
    <%= render "shared/object_flash_message", object: product %>
    <div class="form-group row">
      <label for="product_name" class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-10">
        <input type="text" name="product[name]" class="form-control" id="product_name"  value="<%= product.name if product.name.present? %>" required >
      </div>
    </div>
    <div class="form-group row">
      <label for="product_description" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
         <textarea name="product[description]" class="form-control" id="product_description" required><%= product.description if product.description.present? %></textarea>
      </div>
    </div>  
    <div class="form-group row">
      <label for="product_price" class="col-sm-2 col-form-label">Price</label>
      <div class="col-sm-10">
        <input type="number" name="product[price]" class="form-control" id="product_price" value="<%= product.price if product.price.present? %>" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="product_img_url" class="col-sm-2 col-form-label">Img url</label>
      <div class="col-sm-10">
        <input type="url" name="product[img_url]" class="form-control" id="product_img_url" value="<%= product.img_url if product.img_url.present? %>" required>
      </div>
    </div>
    <fieldset class="form-group">
      <div class="row">
        <legend class="col-form-label col-sm-2 pt-0">Availability</legend>
        <div class="col-sm-2">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="product[availability]" id="product_availability" value= "1" <%= "checked" if product.availability == true %>>
            <label class="form-check-label" for="product_availability">
             In Stock
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="product[availability]" id="product_availability" value= "0" <%= "checked" if product.availability == false %>>
            <label class="form-check-label" for="product_availability">
              Back Ordered
            </label>
          </div>
        </div>
      </div>
    </fieldset>
    <div class="form-group row">
      <div class="col-sm-10">
        <input type="submit" name="commit" class="btn btn-primary" value="Save" data-disable-with="Create Product">
        <a href="/products" id="cancel" name="cancel" class="btn btn-primary">Cancel</a>
      </div>
    </div>
    <% end %>
  </div>
</div>